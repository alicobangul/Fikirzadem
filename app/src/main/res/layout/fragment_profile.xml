<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidElementNotAllowed -->
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />
        <import type="android.R.string" />

        <variable name="profile" type="com.basesoftware.fikirzadem.presentation.viewmodel.ProfileViewModel" />

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintProfileOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:soundEffectsEnabled="false"
            tools:context=".presentation.ui.profile.ProfileFragment">

            <LinearLayout
                android:id="@+id/linearProfileBanner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1F2326"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintProfileTop"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="#1F2326"
                android:orientation="horizontal"
                android:soundEffectsEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearProfileBanner">

                <TextView
                    android:id="@+id/txtPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:soundEffectsEnabled="false"
                    android:text="@{profile.profile.userRealName}"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:soundEffectsEnabled="false"
                    android:text="@{'@'+profile.profile.userName}"
                    android:textColor="#8899A6"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtPersonName"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/linearProfileSocial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="horizontal"
                    android:soundEffectsEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtUserName"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:socialSettings="@{profile.profile.userInstagram}"
                        android:soundEffectsEnabled="false"/>

                    <ImageView
                        android:id="@+id/imgProfileInstagram"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:socialSettings="@{profile.profile.userInstagram}"
                        android:soundEffectsEnabled="false"
                        app:srcCompat="@drawable/social_instagram_ico" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:socialSettings="@{profile.profile.userTwitter}"
                        android:soundEffectsEnabled="false"/>

                    <ImageView
                        android:id="@+id/imgProfileTwitter"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:socialSettings="@{profile.profile.userTwitter}"
                        android:soundEffectsEnabled="false"
                        app:srcCompat="@drawable/social_twitter_ico" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:socialSettings="@{profile.profile.userFacebook}"
                        android:soundEffectsEnabled="false"/>

                    <ImageView
                        android:id="@+id/imgProfileFacebook"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:socialSettings="@{profile.profile.userFacebook}"
                        android:soundEffectsEnabled="false"
                        app:srcCompat="@drawable/social_facebook_ico" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/constProfileMotion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:soundEffectsEnabled="false"
                app:layoutDescription="@xml/fragment_profile_motion"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintProfileTop">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_profile_screen"
                    android:soundEffectsEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <LinearLayout
                        android:id="@+id/linearCounts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:soundEffectsEnabled="false"
                        app:layout_constraintBottom_toBottomOf="@+id/imgProfileImg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgProfileImg"
                        app:layout_constraintTop_toTopOf="@+id/imgProfileImg">

                        <LinearLayout
                            android:id="@+id/linearFollower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="@{profile.uiEnable}"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtFollowerCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:soundEffectsEnabled="false"
                                android:text="@{Integer.toString(profile.profile.userFollower)}"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:soundEffectsEnabled="false"
                                android:text="@string/userFollower"
                                android:textColor="#8899A6"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:soundEffectsEnabled="false"
                            android:text="|"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:id="@+id/linearFollowing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="@{profile.uiEnable}"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtFollowingCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:soundEffectsEnabled="false"
                                android:text="@{Integer.toString(profile.profile.userFollowing)}"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:soundEffectsEnabled="false"
                                android:text="@string/userFollowing"
                                android:textColor="#8899A6"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:soundEffectsEnabled="false"
                            android:text="|"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:id="@+id/linearReportCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtReportCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:soundEffectsEnabled="false"
                                android:text="@{Integer.toString(profile.profile.userReport)}"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:soundEffectsEnabled="false"
                                android:text="@string/caution"
                                android:textColor="#8899A6"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfileImg"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="8dp"
                        android:download="@{profile.profile.userProfilePicture}"
                        android:soundEffectsEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.017"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imgProfileVerify"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/user_verify"
                        android:foreground="@drawable/user_verify"
                        android:soundEffectsEnabled="false"
                        android:src="@drawable/user_verify"
                        android:visibility="@{profile.profile.userEmailConfirm == true ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintBottom_toBottomOf="@+id/imgProfileImg"
                        app:layout_constraintEnd_toEndOf="@+id/imgProfileImg"
                        app:layout_constraintTop_toTopOf="@+id/imgProfileImg"
                        app:layout_constraintVertical_bias="1.050"
                        app:srcCompat="@drawable/user_verify"
                        tools:ignore="UnusedAttribute"
                        tools:srcCompat="@drawable/user_verify" />

                    <TextView
                        android:id="@+id/txtUserBiography"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:soundEffectsEnabled="false"
                        android:text="@{profile.profile.userBiography}"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/imgProfileImg"
                        app:layout_constraintTop_toBottomOf="@+id/imgProfileImg"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:soundEffectsEnabled="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtUserBiography">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnEditProfile"
                            style="@style/SocialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_user_sheet_button"
                            android:clickable="@{profile.uiEnable}"
                            android:padding="10dp"
                            android:soundEffectsEnabled="false"
                            android:text="@string/edit_profile"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:visibility="@{profile.myProfile ? View.VISIBLE : View.GONE}" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnFollow"
                            style="@style/SocialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_user_sheet_button"
                            android:clickable="@{profile.uiEnable}"
                            android:padding="10dp"
                            android:soundEffectsEnabled="false"
                            android:text="@string/follow"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:visibility="@{!profile.socialComplete||profile.myProfile||profile.follow||profile.nowFollow||profile.nowUnfollow ? View.GONE : View.VISIBLE}" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnDeleteFollow"
                            style="@style/SocialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_user_sheet_button"
                            android:clickable="@{profile.uiEnable}"
                            android:padding="10dp"
                            android:soundEffectsEnabled="false"
                            android:text="@string/unfollow"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:visibility="@{!profile.socialComplete||profile.myProfile||!profile.follow|| profile.nowFollow || profile.nowUnfollow ? View.GONE : View.VISIBLE}" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnUserReport"
                            style="@style/SocialButton"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_user_sheet_button"
                            android:clickable="@{profile.uiEnable}"
                            android:padding="10dp"
                            android:soundEffectsEnabled="false"
                            android:text="@string/report"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:visibility="@{profile.myProfile||profile.nowReport ? View.GONE : View.VISIBLE}" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerProfile"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:clickable="@{profile.uiEnable}"
                    android:soundEffectsEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            </androidx.constraintlayout.motion.widget.MotionLayout>

            <ProgressBar
                android:id="@+id/progressProfileLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/shape_progress"
                android:indeterminateDuration="1500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintProfileTop"
                app:layout_constraintTop_toTopOf="@id/constProfileMotion"
                android:visibility="@{profile.loadingProfile ? View.VISIBLE : View.GONE}"/>

            <ProgressBar
                android:id="@+id/progressProfileDownload"
                style="@style/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="100dp"
                android:indeterminate="true"
                android:indeterminateOnly="false"
                android:indeterminateTint="#FFFFFF"
                android:saveEnabled="false"
                android:soundEffectsEnabled="false"
                android:visibility="@{profile.dataDownloading ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>
