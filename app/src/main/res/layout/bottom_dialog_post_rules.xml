<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_report_sheet"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtRulesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:drawableStart="@drawable/post_rule"
        android:drawablePadding="10dp"
        android:text="@string/content_rules"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/txtNegativeAttitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawingCacheQuality="low"
        android:gravity="center_vertical"
        android:text="@string/negative_attitude" />

    <TextView
        android:id="@+id/txtHateSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawingCacheQuality="low"
        android:gravity="center_vertical"
        android:text="@string/hate_speech" />

    <TextView
        android:id="@+id/txtPolitics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawingCacheQuality="low"
        android:gravity="center_vertical"
        android:text="@string/politics" />

    <TextView
        android:id="@+id/txtPersonalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawingCacheQuality="low"
        android:gravity="center_vertical"
        android:text="@string/personal_information" />

    <TextView
        android:id="@+id/txtAdvertising"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawingCacheQuality="low"
        android:gravity="center_vertical"
        android:text="@string/advertising" />

    <TextView
        android:id="@+id/txtSpam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:drawingCacheQuality="low"
        android:gravity="center_vertical"
        android:text="@string/spam" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRulesOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_report_sheet_button"
        android:text="@string/okey"
        android:textColor="#FFFFFF" />

</LinearLayout>
