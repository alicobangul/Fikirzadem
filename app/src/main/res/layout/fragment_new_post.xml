<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="android.R.string" />
        <variable name="shared" type="com.basesoftware.fikirzadem.presentation.viewmodel.SharedViewModel" />
        <variable name="newpost" type="com.basesoftware.fikirzadem.presentation.viewmodel.NewPostViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintNewPost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.newpost.NewPostFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintNewPostTop"
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgNewPostGoBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:clickable="@{newpost.uiEnableValue}"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_goback"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <ProgressBar
                android:id="@+id/msgLengthProgress"
                style="@style/progressBar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:hapticFeedbackEnabled="false"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="350"
                android:progress="350"
                android:saveEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtNewPostLenght"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="350"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/msgLengthProgress"
                app:layout_constraintEnd_toEndOf="@+id/msgLengthProgress"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/msgLengthProgress"
                app:layout_constraintTop_toTopOf="@+id/msgLengthProgress"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtAddCharLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:clickable="@{newpost.uiEnableValue}"
                android:text="+ 650"
                android:textColor="@android:color/holo_green_light"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/msgLengthProgress"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/btnSendNewPost"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/newpost_ico_send_button"
                android:clickable="@{newpost.uiEnableValue}"
                android:contentDescription="@string/desc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.981"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgNewPostPp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:clickable="@{newpost.uiEnableValue}"
            android:download="@{shared.user.userProfilePicture}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintNewPostTop" />

        <ImageView
            android:id="@+id/imgNewVerify"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/user_verify"
            android:foreground="@drawable/user_verify"
            android:src="@drawable/user_verify"
            android:visibility="@{shared.user.userEmailConfirm == true ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/imgNewPostPp"
            app:layout_constraintEnd_toEndOf="@+id/imgNewPostPp"
            app:layout_constraintTop_toTopOf="@+id/imgNewPostPp"
            app:layout_constraintVertical_bias="1.150"
            app:srcCompat="@drawable/user_verify"
            tools:srcCompat="@drawable/user_verify"
            tools:ignore="ContentDescription,UnusedAttribute" />

        <LinearLayout
            android:id="@+id/linearNewPost"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgNewPostPp"
            app:layout_constraintTop_toBottomOf="@+id/constraintNewPostTop">

            <EditText
                android:id="@+id/txtAddNewPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@android:color/transparent"
                android:clickable="@{newpost.uiEnableValue}"
                android:digits="ABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZQWXabcçdefgğhıijklmnoöprsştuüvyzqwx0123456789.,;!?$#%+-_/*()[]{} "
                android:gravity="top"
                android:hint="@string/recommendation"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textVisiblePassword|textMultiLine|text"
                android:longClickable="false"
                android:maxLength="350"
                android:saveEnabled="true"
                android:spaceFilter="@{true}"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/darker_gray"
                android:textMenuFilter="@{true}" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/constraintNewPostExtra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintNewPostExtra"
            android:layout_width="0dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/txtCategoryPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="0"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="@{newpost.uiEnableValue}"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/txtLikeModePopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="0"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="@{newpost.uiEnableValue}"
                android:text="@string/likemode_on"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:drawableStartCompat="@drawable/newpost_likemode_spinner_ico_open"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>